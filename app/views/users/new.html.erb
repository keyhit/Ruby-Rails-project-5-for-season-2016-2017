<h1>Add new user</h1>

<%= form_tag :action => 'create' do %>
    <p><label for = "user_first_name">First Name</label>:
      <%= text_field 'users', 'first_name' %></p>

    <p><label for = "user_last_name">Last Name</label>:
      <%= text_field 'users', 'last_name' %></p>

    <p><label for = "user_phone">Phone</label>:
      <%= text_field 'users', 'user_phone' %></p>

    <p><label for = "user_email">Email</label>:
      <%= text_field 'users', 'email' %></p>

    <p><label for = "user_password">Password</label>:
      <input type="text" name="user_password"></p>

    <%= submit_tag "Create" %>
<% end -%>
